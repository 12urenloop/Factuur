<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Naam", class: 'label' %>
    <p class='control'>
      <%= form.text_field :name, class: 'input' %>
    </p>
  </div>

  <%= form.fields_for :address do |f| %>

  <div class="field">
    <%= f.label "Straat", class: 'label' %>
    <%= f.text_field :street, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label "Postcode", class: 'label' %>
    <%= f.text_field :zip_code, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label "Stad", class: 'label' %>
    <%= f.text_field :city, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label "Land", class: 'label' %>
    <%= f.text_field :country, class: 'input' %>
  </div>
  <% end %>

  <p class="control">
    <%= form.submit 'Bestendige toevoegen', class: 'button is-primary' %>
  </p>
<% end %>
