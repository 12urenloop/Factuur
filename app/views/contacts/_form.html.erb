<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: 'label' %>
    <p class='control'>
      <%= form.text_field :name, class: 'input' %>
    </p>
  </div>

  <%= form.fields_for :address do |f| %>

  <div class="field">
    <%= f.label :street, class: 'label' %>
    <%= f.text_field :street, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :zip_code, class: 'label' %>
    <%= f.text_field :zip_code, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :city, class: 'label' %>
    <%= f.text_field :city, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :country, class: 'label' %>
    <%= f.text_field :country, class: 'input' %>
  </div>
  <% end %>

  <div class="field is-grouped">
    <p class="control">
      <%= form.submit 'Contact toevoegen', class: 'button is-primary' %>
    </p>
    <p class="control">
      <%= link_to 'Back', contacts_path, class: 'button is-link' %>
    </p>
  </div>
<% end %>
