<div class="content">
  <h1>Contacts</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Street</th>
        <th>City</th>
        <th>Zip code</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.address.street %></td>
        <td><%= contact.address.city %></td>
        <td><%= contact.address.zip_code %></td>
        <td><%= contact.address.country %></td>
        <td><%= link_to 'Show', contact, class: 'button is-primary' %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: 'button is-warning' %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Contact', new_contact_path %>

</div>
