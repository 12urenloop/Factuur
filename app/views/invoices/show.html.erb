<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Factuur <%= @invoice.created_at.to_formatted_s(:short) %>
      </h1>
    </div>
  </div>
</section>

<p id="notice"><%= notice %></p>

<section class="container is-fluid">
  <div class="columns">
    <div class="column is-narrow">
      <%= @invoice.created_at %>
    </div>
    <div class="column invoice-column">
      <object data="<%= @pdf_path %>" type="application/pdf" width="100%" height="100%">
        <iframe src="<%= @pdf_path %>" width="100%" height="100%" style="border: none;">
          This browser does not support PDFs. Please download the PDF to view it: <a href="<%= @pdf_path %>">Download PDF</a>
        </iframe>
      </object>
    </div>
  </div>
</section>

<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', invoices_path %>
