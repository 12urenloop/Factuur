<div class="content">

<h1>Invoices</h1>
<table>
  <thead>
    <tr>
      <th>Factuurnummer</th>
      <th>tav</th>
      <th>Aanmaakdatum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.id %></td>
        <td><%= invoice.contact %></td>
        <td><%= invoice.created_at %></td>
        <td><%= link_to 'Bekijk', invoice_path(id: invoice.id, format: :pdf), target: :_blank %></td>
        <td><%= link_to 'Details', invoice %></td>
        <td><%= link_to 'Verwijder', invoice, method: :delete, data: { confirm: 'Ben je zeker dat je deze factuur wilt verwijderen?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nieuwe factuur', new_invoice_path, class: 'button is-primary' %>
</div>
