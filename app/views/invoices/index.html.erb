<div class="content">

<h1>Invoices</h1>
<table>
  <thead>
    <tr>
      <th>Factuurnummer</th>
      <th>Date created</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.id %></td>
        <td><%= invoice.created_at %></td>
        <td><%= invoice.description %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path, class: 'button is-primary' %>
</div>
