<section class="hero is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Facturen
      </h1>
    </div>
  </div>
</section>

<div class="container">
  <div class="content">

  <h1>Invoices</h1>
  <table>
    <thead>
      <tr>
        <th>Date created</th>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.created_at %></td>
          <td><%= invoice.description %></td>
          <td><%= link_to 'Show', invoice %></td>
          <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Invoice', new_invoice_path, class: 'button is-primary' %>
  </div>
</div>
